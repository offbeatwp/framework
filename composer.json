{
  "name": "offbeatwp/framework",
  "description": "The OffbeatWP framework",
  "license": "MIT",
  "type": "library",
  "require": {
    "php": "8.*",
    "php-di/php-di": "^6.4.0",
    "illuminate/collections": "^v10.48.11",
    "illuminate/macroable": "^v10.48.11",
    "symfony/routing": "^v5.4.39",
    "symfony/http-foundation": "^v5.4.39",
    "ext-dom": "*"
  },
  "autoload": {
    "files": [
      "src/Foundation/helpers.php"
    ],
    "psr-4": {
      "OffbeatWP\\": "src"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "php-stubs/wp-cli-stubs": "^v2.10.0",
    "phpstan/phpstan": "1.11.1",
    "szepeviktor/phpstan-wordpress": "^v1.3.4",
    "phpstan/phpstan-deprecation-rules": "^1.2.0"
  }
}
