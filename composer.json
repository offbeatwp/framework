{
  "name": "offbeatwp/framework",
  "description": "The OffbeatWP framework",
  "license": "MIT",
  "type": "library",
  "require": {
    "php": "^8.0",
    "php-di/php-di": "^5.4.6",
    "illuminate/collections": "^v8.83.27",
    "illuminate/macroable": "^v8.83.27",
    "symfony/routing": "^v6.4.7",
    "symfony/http-foundation": "^v6.4.7",
    "ext-dom": "*"
  },
  "autoload": {
    "files": [
      "src/Foundation/helpers.php"
    ],
    "psr-4": {
      "OffbeatWP\\": "src"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "php-stubs/wp-cli-stubs": "^v2.8.0",
    "phpstan/phpstan": "1.10.39",
    "szepeviktor/phpstan-wordpress": "^v1.1.7",
    "phpstan/phpstan-deprecation-rules": "^1.1.4"
  }
}
